<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:backgroundTint="#E1F5FE"
    android:background="@drawable/rounded_background"
    tools:context=".Settings">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@+id/welc"
      android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativehome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeusertxt"
        android:minLines="3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Welcome User"/>
    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff"
        android:src="@drawable/baseline_house_24"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"/>
    </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/rounded_background"
      android:orientation="vertical"
      android:id="@+id/account_lay"
      android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:text="Account"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:backgroundTint="#A9A9A9" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_info"
        android:text="Manage your profile and account."
        android:textStyle="normal|italic"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:minLines="3"
        android:maxLines="4"
        android:backgroundTint="@color/white" />
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:id="@+id/privacy_lay"
        android:layout_margin="20dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Privacy"
          android:ellipsize="end"
          android:maxLines="3"
          android:minLines="2"
          android:layout_marginLeft="10dp"
          android:backgroundTint="#A9A9A9" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/privacy_info"
          android:text="Manage your privacy here..."
          android:textStyle="normal|italic"
          android:textSize="10sp"
          android:layout_marginLeft="10dp"
          android:textColor="@color/black"
          android:minLines="3"
          android:maxLines="4"

          android:backgroundTint="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:layout_margin="20dp"
        android:id="@+id/support_lay">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Support"
          android:ellipsize="end"
          android:maxLines="3"
          android:layout_marginLeft="10dp"
          android:minLines="2"
          android:backgroundTint="#A9A9A9" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/support_info"
          android:text="Find us or reach us here.."
          android:textStyle="normal|italic"
          android:textSize="10sp"
          android:layout_marginLeft="10dp"
          android:textColor="@color/black"
          android:minLines="3"
          android:maxLines="4"
          android:backgroundTint="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:id="@+id/logout_lay"
        android:layout_margin="20dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
        android:id="@+id/relativelogout">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
            android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"

        android:backgroundTint="#A9A9A9" />

        <ImageButton
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffff"
            android:src="@drawable/baseline_logout_24"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"/>
      </RelativeLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/logout_info"
          android:text="Click here to logout."
          android:layout_marginLeft="10dp"
          android:textStyle="normal|italic"
          android:textSize="10sp"
          android:textColor="@color/black"
          android:minLines="2"
          android:maxLines="3"
          android:backgroundTint="@color/white" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:minLines="2"

        android:backgroundTint="#A9A9A9" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/version_info"
          android:text="Note app Version 10.2.0"
          android:layout_marginLeft="10dp"
          android:textStyle="normal|italic"
          android:textSize="10sp"
          android:textColor="@color/black"
          android:minLines="3"
          android:maxLines="4"

          android:backgroundTint="@color/white" />
  </LinearLayout>

  </LinearLayout>


</ScrollView>